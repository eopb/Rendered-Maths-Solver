{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/js",
    "allowJs": true,
    "target": "es3",
    "typeRoots": ["node_modules/@types"],
    "strict": true,
    "downlevelIteration": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2015",
      "es2016.array.include",
      "es2017.object",
      "es2017.string",
      "es2018.asynciterable",
      "es2018.promise",
      "es2019.array",
      "es2019.object",
      "es2019.string",
      "es2020.string"
    ]
  },
  "include": ["./src/**/*"]
}
